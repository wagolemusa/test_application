
<h2 align="center">Title: <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">

<% if @article.user %>

<! this was pasted here !>
	<ul class="listing">
			<div class="row center">
				<div class="col-md-4 col-md-offset-4">
				<li>Created by:</li>
					<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
					<li class="article-title">
						<%= link_to @article.user.username, user_path(@article.user) %>
						</li>
						<li><small>
						<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
						</div>
							</div>
							</ul>
<% end %>
<! end of paste !>

	<h4 class="center description"><strong>Description:</strong></h4>
	<hr>
 <%= simple_format(@article.description) %>

 <! this it displays the categories !>

 <% if @article.categories.any? %>
<p>Categories: <%= render @article.categories %></p>
 <% end %>

<div class="article-actions">

	<% if logged_in? && (current_user == @article.user || current_user.admin?) %> <! this removes only edit & delete method from show page !>
				<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 

					<%= link_to "Delete this article", article_path(@article), method: :delete, 
																	data: { comfirm: "Are you sure you want to delete the article?"},class: "btn btn-xs btn-danger" %>
		<% end %>

	<%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
	</div>
	</div>
